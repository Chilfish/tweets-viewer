{
  "name": "@tweets-viewer/react-tweet",
  "version": "3.2.2",
  "repository": "https://github.com/vercel/react-tweet.git",
  "author": "Luis Alvarez (https://twitter.com/luis_fades)",
  "scripts": {
    "build": "pnpm types",
    "types": "tsc --emitDeclarationOnly",
    "lint": "TIMING=1 eslint \"src/**/*.{ts,tsx,js,jsx}\" --fix"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vercel/react-tweet/issues"
  },
  "sideEffects": [
    "./dist/twitter-theme/tweet-container.js"
  ],
  "type": "module",
  "exports": {
    ".": {
      "react-server": "./dist/index.js",
      "default": "./dist/index.client.js"
    },
    "./api": "./dist/api/index.js",
    "./theme.css": "./dist/twitter-theme/theme.css"
  },
  "files": [
    "dist/**/*.{js,d.ts,css}"
  ],
  "typesVersions": {
    "*": {
      "index": [
        "src/index"
      ],
      "utils": [
        "src/utils"
      ],
      "api": [
        "src/api/index"
      ],
      "*": []
    }
  },
  "publishConfig": {
    "access": "public",
    "typesVersions": {
      "*": {
        "index": [
          "dist/index.d.ts"
        ],
        "utils": [
          "dist/utils.d.ts"
        ],
        "api": [
          "dist/api/index.d.ts"
        ],
        "*": []
      }
    }
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "clsx": "^2.0.0"
  }
}
