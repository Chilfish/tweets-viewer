    "unocss-preset-shadcn": "^0.3.1",
    "unplugin-vue-components": "^28.0.0",
    "vite": "^6.0.7",
    "vite-plugin-vue-devtools": "7.4.6",
    "vue-tsc": "^2.2.0",
    "wrangler": "^3.100.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
