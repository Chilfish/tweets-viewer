{
  "name": "tweets-viewer",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.3.8",
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun run --cwd ./apps/server dev",
    "dev:client": "bun run --cwd ./apps/web-react dev",
    "build:client": "bun run --cwd ./apps/web-react build",
    "deploy": "bun run --cwd ./apps/server deploy",
    "lint": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@types/bun": "^1.3.8",
    "@types/node": "^25.1.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "lefthook": "^2.0.16",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
