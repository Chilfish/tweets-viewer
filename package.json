{
  "name": "tweets-viewer",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.3.9",
  "scripts": {
    "dev": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun run --cwd ./apps/server dev",
    "dev:client": "bun run --cwd ./apps/web-react dev",
    "build:client": "bun run --cwd ./apps/web-react build",
    "deploy": "bun run --cwd ./apps/server deploy",
    "lint": "eslint . --fix"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "dependencies": {
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.4.3",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.3.0",
    "concurrently": "^9.2.1",
    "dotenv": "^17.3.1",
    "eslint": "^10.0.1",
    "eslint-plugin-format": "^1.4.0",
    "lefthook": "^2.1.1",
    "lint-staged": "^16.2.7",
    "typescript": "^5.9.3"
  }
}
