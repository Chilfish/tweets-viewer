    "@types/node": "^22.10.5",
    "@unocss/eslint-plugin": "^0.65.4",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitejs/plugin-vue-jsx": "^4.1.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.3",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^1.0.1",
    "hono": "^4.6.16",
    "lint-staged": "^15.3.0",
    "naive-ui": "^2.41.0",
    "ohash": "^1.1.4",
    "p-map": "^7.0.3",
    "rettiwt-api": "^4.1.4",
