    "@vueuse/core": "^12.3.0",
    "@vueuse/router": "^12.3.0",
    "axios": "^1.7.9",
    "axios-cache-interceptor": "^1.6.2",
    "clsx": "^2.1.1",
    "cva": "npm:class-variance-authority@^0.7.1",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.10",
    "gsap": "^3.12.5",
    "lucide-vue-next": "^0.469.0",
    "pinia": "^2.3.0",
    "radix-vue": "^1.9.12",
    "tailwind-merge": "^2.6.0",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
